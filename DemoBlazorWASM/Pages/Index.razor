@page "/"
@inject IEventi servizioEventi

<PageTitle>Index</PageTitle>

<h1>Hello, world!</h1>

<ListaEventi Titolo="Lista Eventi Futuri" Eventi="eventiFuturi" OnEventoEliminato="EliminaEventoFuturi" />


@code {
    private List<Evento> eventiFuturi = new();

    protected override void OnInitialized()
    {
        eventiFuturi = servizioEventi.EstraiEventiFuturi();
    }

    private void EliminaEventoFuturi(Evento eventoDaEliminare)
    {
        eventiFuturi.Remove(eventoDaEliminare);
    }
}
